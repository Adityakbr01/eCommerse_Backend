<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Custom transition for hover effect */
      .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="container mx-auto py-12">
      <h1 class="text-5xl font-bold mb-12 text-center text-gray-800">
        All Products
      </h1>

      <% if (products.length > 0) { %>
      <div
        class="grid items-center justify-center px-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12"
      >
        <% products.forEach(function(product) { %>
        <!-- Product card -->
        <div
          class="bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 product-card hover:shadow-2xl flex flex-col"
        >
          <!-- Product Image -->
          <% if (product.imageUrl) { %>
          <img
            src="<%= product.imageUrl %>"
            alt="<%= product.name %>"
            class="w-full h-64 object-cover"
          />
          <% } else { %>
          <img
            src="/images/placeholder.png"
            alt="Product Image"
            class="w-full h-64 object-cover"
          />
          <% } %>

          <!-- Product Info -->
          <div class="p-6 flex flex-col justify-between flex-grow">
            <h2 class="text-xl font-semibold text-gray-800 mb-3">
              <%= product.name %>
            </h2>
            <p class="text-gray-600 mb-4"><%= product.description %></p>
            <div class="mt-auto">
              <p class="text-lg font-bold text-gray-900">
                â‚¹<%= product.price %>
              </p>
              <a
                href="#"
                class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg mt-4 transition-colors duration-300 hover:bg-blue-700"
                >Buy Now</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-center text-gray-600">No products available.</p>
      <% } %>
    </div>
  </body>
</html>
